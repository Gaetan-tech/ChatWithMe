{
  "expo": {
    "name": "Chat Flags",
    "slug": "chat-flags-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    //"icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      //"image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chatflags.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Localisation pour trouver des utilisateurs proches",
        "NSMotionUsageDescription": "Accéléromètre pour améliorer l'expérience"
      }
    },
    "android": {
      "adaptiveIcon": {
       // "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.chatflags.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          //"icon": "./assets/notification-icon.png",
          "color": "#6366f1"
        }
      ],
      "expo-localization",
      "expo-location",
      "expo-sensors",
      "expo-font"
    ],
    "scheme": "chatflags"
  }
}
